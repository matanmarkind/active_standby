    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'active_standby'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=active_standby"
                ],
                "filter": {
                    "name": "active_standby",
                    "kind": "lib"
                }
            },
            "args": [
                "lockless::aslockhandle::test::debug_str"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'loom'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=loom",
                    "--package=active_standby"
                ],
                "filter": {
                    "name": "loom",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug benchmark 'bench'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bench=bench",
                    "--package=active_standby"
                ],
                "filter": {
                    "name": "bench",
                    "kind": "bench"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}